<%= form_for @new_user do |u| %>
  <div id="newUser" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h2>New User</h2>
    </div>
    <div class="modal-body">
    <% if @new_user.errors.any? %>
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <h4>Attention!</h4>
        A wild error appeared:
          <ul>
          <% @new_user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
      </div>
    <% end %>
      <div class="field">
        <span class="span3">Name</span>
      </div>
      <div class="field">
        <div class="span3 input-append">
          <%= u.text_field :name, class: "span5" %>
        </div>
      </div>
      <div class="field">
        <span class="span3">Email</span>
      </div>
      <div class="field">
        <div class="span3 input-append">
          <%= u.text_field :email, class: "span5" %>
        </div>
      </div>
      <div class="field">
        <span class="span3">Team</span>
      </div>
      <div class="field">
        <div class="span3 input-append">
          <%= u.collection_select(:team_id, @teams, :id, :name) %>
        </div>
      </div>
      <div class="field">
        <span class="span3">Password</span>
      </div>
      <div class="field">
        <div class="span3 input-append">
          <%= u.password_field :password, class: "password_field" %>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= u.submit "Save", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
