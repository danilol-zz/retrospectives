<ul class="breadcrumb">
  <li><%= link_to @user.name, retrospectives_path %> <span class="divider">/</span></li>
  <li><b>Change Password</b></li>
</ul>
<div class="row-fluid">
  <div class="span6">
    <img src="/assets/willy.png"  title="<%= @user.name %>" alt="Ralph Steadman Artwork"/>
  </div><!-- div:span10 -->
  <div class="span5">
    <h3><%= @user.name %></h3>
    <legend></legend>
    <p>Don't forget to write your password in a piece of paper.</p>
    <%= form_for(@user, url: password_update_path, html: {class: "nav-form"}) do |f| %>
      <% if @user.errors.any? or notice %>
        <div class="alert alert-error">
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          <h4>Attention!</h4>
          A wild error appeared:
          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field">
        <%= f.password_field :password, placeholder:"Password", class: "span5"  %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, placeholder:"Confirmation", class: "span5"  %>
      </div>
      <div class="field">
        <%= f.hidden_field :forgot_password_token, class: "span5", value: @user.forgot_password_token  %>
      </div>
      <div class="actions">
        <%= f.submit "Save", class: "btn btn-primary btn-inverse" %>
        <% unless @user %>
        <%= link_to 'Back', root_path, class: "btn btn-link" %>
        <% end %>
      </div>
    <% end %>
  </div><!-- div:span3 -->
</div><!-- div:row -->
