<% if @worst and @worst.bads.present? %>
  <div class="row-fluid">
    <div class="span12">
      <h4>Items da Ãºltima retrospectiva:</h4>
      <table class="table">
        <thead>
          <tr>
            <th>Description</th>
            <th>Action</th>
            <th width="100">Fixed?</th>
          </tr>
        </thead>
        <tbody>
          <% @worst.bads.each do |bad| %>
            <tr class="warning">
              <td><%= bad.description %></td>
              <td><%= bad.action %></td>
              <% if can_edit? %>
                <td>
                  <%= link_to 'Yes',  retrospective_bad_to_retrospective_good_path(@retrospective, bad), class: 'btn btn-small btn-success' %>
                  <%= link_to 'No',  retrospective_bad_keeps_path(@retrospective, bad), class: 'btn btn-small btn-danger' %>
                </td>
              <% else %>
                <td>&nbsp;</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!--/div:span5 -->
  </div><!-- div:row -->
<% end %>

